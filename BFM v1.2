void setup() 
{  
//INITIALIZE VARIABLES
  int sysmode = 0;            //0 = Manual, 1 = Automatic 2 = Maintenence
  int count = 0;
  int PassFlg = 0;
  int PassData = 0;
  int PassInit = 0;
  int PassT = 0;
